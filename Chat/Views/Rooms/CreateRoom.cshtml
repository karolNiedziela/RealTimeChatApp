@model CreateRoomViewModel
@{ 
    ViewData["Title"] = "CreateRoom";
}

<form class="w-50 mx-auto mt-2" method="post" asp-controller="Rooms" asp-action="CreateRoom">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label for="inputAddress">@Html.DisplayNameFor(x => x.Name)</label>
        <input type="text" class="form-control" asp-for="Name" id="name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary float-right">Create</button>
</form>