@model List<InviteToRoomViewModel>
@{
    ViewData["Title"] = "Invite to room";
}
<div class="container-fluid container-home">
    <div class="text-center"><h2>Invite to room</h2></div>

    @if (Model.Count == 0)
    {
        <div class="row content row-header">
            No rooms to invite...
        </div>
    }
    else
    {

        @for (var i = 0; i < Model.Count; i++)
        {
            <div class="row content">
                <div class="col-sm-10">@Model[i].Name</div>
                <div class="col-sm-2 text-center">
                    <form asp-controller="Rooms" asp-action="InviteToRoom">
                        <input type="hidden" asp-for="@Model[i].RoomId" name="RoomId" value="@Model[i].RoomId" />
                        <input type="hidden" asp-for="@Model[i].UserId" name="UserId" value="@Model[i].UserId" />
                        <i class='bx bx-plus' onclick="this.parentElement.submit()"></i>
                    </form>

                </div>
            </div>
        }

    }
</div>
