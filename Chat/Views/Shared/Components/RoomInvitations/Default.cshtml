@model List<UserRoomInvitationViewModel>

@if (Model.Count() == 0)
{
    <div class="row content row-header">
        No room invitations...
    </div>
}
else
{
    @foreach (var roomInvitation in Model)
    {
        <div class="row content">
            <div class="col-sm-10">@roomInvitation.Name</div>

            <div class="col-sm icons">
                <form asp-controller="RoomInvitations" asp-action="AcceptRoomInvitation">
                    <input type="hidden" name="roomId" value="@roomInvitation.RoomId">
                    <a onclick="this.parentElement.submit()"><i class='bx bx-check'></i></a>
                </form>
            </div>

            <div class="col-sm icons">
                <form asp-controller="RoomInvitations" asp-action="RejectRoomInvitation">
                    <input type="hidden" name="roomId" value="@roomInvitation.RoomId" />
                    <a onclick="this.parentElement.submit()"> <i class='bx bx-x'></i></a>
                </form>

            </div>
        </div>
    }
}