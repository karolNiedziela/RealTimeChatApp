@model IEnumerable<FriendRequest>

@if (Model.Count() == 0) {
  <div class="row content row-header">
      No friend requests...
  </div>
}
else {
    @foreach (var friendRequest in Model) 
    { 
    <div class="row content">
        <img class="user-friend-image" src="https://cdn.icon-icons.com/icons2/2643/PNG/512/male_boy_person_people_avatar_icon_159358.png" />
        <div class="col-sm-10">@friendRequest.Sender.UserName</div>

        <div class="col-sm icons">
            <form asp-controller="Friends" asp-action="AcceptFriendRequest">
                <input type="hidden" name="userId" value="@friendRequest.SenderId">
            <a onclick="this.parentElement.submit()"><i class='bx bx-check'></i></a>
            </form>
        </div>

        <div class="col-sm icons">
            <form asp-controller="Friends" asp-action="RejectFriendRequest">
                <input type="hidden" name="userId" value="@friendRequest.SenderId" />
                <a onclick="this.parentElement.submit()"> <i class='bx bx-x'></i></a>
            </form>

        </div>
    </div>
    }
}

